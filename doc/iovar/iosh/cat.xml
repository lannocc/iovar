          xmlns:m="http://www.w3.org/1998/Math/MathML"
          xmlns:html="http://www.w3.org/1999/xhtml"
          xmlns:db="http://docbook.org/ns/docbook">
  <refnamediv>
    <refname>cat</refname>

    <refpurpose>Concatenate (combine) resources and output</refpurpose>
  </refnamediv>

  <refsynopsisdiv>
    <cmdsynopsis label="/bin/cat" role="iosh">
      <command role="iosh">cat</command>

      <arg rep="repeat"><replaceable>resource</replaceable></arg>
    </cmdsynopsis>

    <para>By default, any resources are displayed after any input.</para>
  </refsynopsisdiv>

  <refsection>
    <title>Examples</title>

    <para>Here are some examples.</para>

    <example>
      <title>Combine two text files and save as a new file</title>

      <programlisting language="shell">cat foo.txt bar.txt &gt; foobar.txt</programlisting>
    </example>

    <example>
      <title>Combine input and a text file</title>

      <programlisting language="shell">echo hello world | cat foobar.txt</programlisting>
    </example>
  </refsection>

  <refsection>
    <title>Source</title>

    <programlisting language="java"
                    xlink:href="/src/net/iovar/web/bin/Cat.java"
                    xlink:show="replace"/>
