  <refnamediv>
    <refname>system</refname>

    <refpurpose>Execute a system command</refpurpose>
  </refnamediv>

  <refsynopsisdiv>
    <cmdsynopsis label="/bin/system" role="iosh">
      <command role="iosh">system</command>

      <arg choice="req"><replaceable>command</replaceable></arg>

      <arg rep="repeat"><replaceable>arg</replaceable></arg>
    </cmdsynopsis>
  </refsynopsisdiv>

  <refsection>
    <title>Examples</title>

    <para>Here are some examples.</para>

    <example>
      <title>Display a message by using the underlying system's
      <command>echo</command> command</title>

      <programlisting language="shell">system file:echo hello world</programlisting>

      <screen>hello world</screen>
    </example>
  </refsection>

