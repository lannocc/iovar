  <refnamediv>
    <refname>sleep</refname>

    <refpurpose>Sleep for a number of seconds</refpurpose>
  </refnamediv>

  <refsynopsisdiv>
    <cmdsynopsis label="/bin/sleep" role="iosh">
      <command role="iosh">sleep</command>

      <arg choice="req"><replaceable>seconds</replaceable></arg>
    </cmdsynopsis>
  </refsynopsisdiv>

  <refsection>
    <title>Examples</title>

    <para>Here are some examples.</para>

    <example>
      <title>Sleep for 5 seconds then display a message</title>

      <programlisting language="shell">sleep 5; echo time is up</programlisting>
    </example>
