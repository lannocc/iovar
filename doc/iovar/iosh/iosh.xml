  <refnamediv>
    <refname>iosh</refname>

    <refpurpose>IOVAR shell processing</refpurpose>
  </refnamediv>

  <refsynopsisdiv>
    <cmdsynopsis label="/bin/iosh" role="iosh">
      <command role="iosh">iosh</command>

      <arg><replaceable>resource</replaceable></arg>
    </cmdsynopsis>
  </refsynopsisdiv>

  <refsection>
    <title>Examples</title>

    <para>Here are some examples.</para>

    <example>
      <title>Execute a shell script</title>

      <programlisting language="shell">iosh foo.sh</programlisting>
    </example>

    <example>
      <title>Execute commands from standard input</title>

      <programlisting language="shell">echo echo hello world | iosh</programlisting>

      <screen>hello world</screen>
    </example>
  </refsection>

